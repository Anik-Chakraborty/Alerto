<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alerto">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.HIGH_SAMPLING_RATE_SENSORS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/alerto_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/alerto_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name=".User_Profile"
            android:theme="@style/Theme.ALERTO"
            android:exported="false" />
        <activity
            android:name=".Feedback"
            android:theme="@style/Theme.ALERTO"
            android:exported="false" />
        <activity
            android:name=".About"
            android:theme="@style/Theme.ALERTO"
            android:exported="false" />
        <activity
            android:name=".user_home"
            android:theme="@style/Theme.ALERTO"
            android:exported="false" />
        <activity
            android:name=".verify_otp"
            android:theme="@style/Theme.ALERTO"
            android:exported="false" />
        <activity
            android:name=".phn_num"
            android:theme="@style/Theme.ALERTO"
            android:exported="false" />
        <activity
            android:name=".Register_first"
            android:theme="@style/Theme.ALERTO"
            android:exported="false" />
        <activity
            android:name=".splash_activity"
            android:theme="@style/Theme.ALERTO"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.ALERTO"
            android:exported="true" />

        <service
            android:name=".G_Force_Counter"
            android:enabled="true"
            android:exported="false" />

        <service android:name=".Speed_Counter_Service"
            android:enabled="true"
            android:exported="false"/>

        <receiver android:name=".Receiver" />
    </application>

</manifest>