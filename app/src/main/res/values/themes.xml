<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ALERTO" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="register_user_label">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/segoe_ui</item>
    </style>
    <style name="register_user_edit_text">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/segoe_ui</item>
        <item name="hintTextColor">#A5A5A5</item>
        <item name="android:padding">10dp</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>

    <style name="TextInputEditText">
        <item name="singleLine">true</item>
        <item name="fontFamily">@font/segoe_ui</item>
        <item name="textFillColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>
</resources>